<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/a">



    <EditText
        android:hint="Email"
        android:background="#74FFFFFF"
        android:id="@+id/emailET"
        android:layout_width="300dp"
        android:layout_height="35sp"
        android:layout_marginTop="40dp"
        android:paddingLeft="24dp"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="46dp" />

    <EditText
        android:hint="First Name"
        android:background="#7EFFFFFF"
        android:id="@+id/first_nameET"
        android:layout_width="300dp"
        android:layout_height="35sp"
        android:layout_marginTop="30dp"
        android:paddingLeft="24dp"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/emailET"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="46dp" />

    <EditText
        android:hint="Last Name"
        android:background="#74FFFFFF"
        android:id="@+id/last_nameET"
        android:layout_width="300dp"
        android:layout_height="35sp"
        android:layout_marginTop="30dp"
        android:paddingLeft="24dp"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/first_nameET"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="46dp" />

    <EditText
        android:hint="Age"
        android:background="#74FFFFFF"
        android:id="@+id/ageET"
        android:layout_width="300dp"
        android:layout_height="35sp"
        android:layout_marginTop="30dp"
        android:paddingLeft="24dp"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/last_nameET"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="46dp" />

    <EditText
        android:background="#6FFFFFFF"
        android:id="@+id/addressET"
        android:layout_width="300dp"
        android:layout_height="35sp"
        android:layout_marginTop="30dp"
        android:hint="Address"
        android:paddingLeft="24dp"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/ageET"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="46dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:onClick="save"
        android:background="#7748B1"
        android:id="@+id/save"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:text="Save"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/addressET"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="46dp"
        android:textAllCaps="false"/>


</androidx.constraintlayout.widget.ConstraintLayout>